{
  "pluginAlias": "SmartDry",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Platform Name",
        "type": "string",
        "default": "Homebridge SmartDry",
        "description": "This is the name that will be used for all logs pertaining to this platform.",
        "required": true
      },
      "sensors": {
        "type": "array",
        "items": {
          "title": "Sensors",
          "type": "object",
          "properties": {
            "id": {
              "title": "SmartDry ID",
              "type": "string",
              "required": true
            },
            "name": {
              "title": "Name",
              "type": "string",
              "required": true
            },
            "serviceType": {
              "title": "Type of Homekit Service",
              "type": "string",
              "required": true,
              "default": "switch",
              "oneOf": [
                {
                  "title": "Switch",
                  "enum": [
                    "switch"
                  ]
                },
                {
                  "title": "Contact Sensor",
                  "enum": [
                    "contactSensor"
                  ]
                }
              ]
            }
          }
        }
      }
    }
  }
}
