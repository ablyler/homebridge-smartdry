{
  "pluginAlias": "SmartDry",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "sensors": {
        "type": "array",
        "items": {
          "title": "Sensors",
          "type": "object",
          "properties": {
            "id": {
              "title": "SmartDry ID",
              "type": "string",
              "placeholder": "Enter SmartDry ID...",
              "required": true
            },
            "name": {
              "title": "Name",
              "type": "string",
              "placeholder": "Enter name, such as: Samsung Drier",
              "required": true
            },
            "serviceType": {
              "title": "Type of Homekit Service",
              "type": "string",
              "required": true,
              "default": "switch",
              "oneOf": [
                {
                  "title": "Switch",
                  "enum": [
                    "switch"
                  ]
                },
                {
                  "title": "Contact Sensor",
                  "enum": [
                    "contactSensor"
                  ]
                }
              ]
            }
          }
        }
      }
    }
  }
}
